@page
@model ProjectTracker.Pages.PersonsModel

@{
    ViewData["Title"] = "Persons";
}

<h1>Persons</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Persons)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.Id">Projects</a> |
                    <a asp-page="./ProjectItems" asp-route-id="@item.Id">Project Items</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

