@page
@model ProjectTracker.Pages.PersonsModel

@{
    ViewData["Title"] = "Persons";
}

<h1>Persons</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Persons)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.Id">Projects</a> |
                    <a asp-page="./ProjectItems" asp-route-id="@item.Id">Project Items</a> |
                    <form method="post">
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post">
    <input asp-for="@Model.person.Name" />
    <p><span asp-validation-for="@Model.person.Name"></span></p>
    <input asp-for="@Model.person.Email" />
    <p><span asp-validation-for="@Model.person.Email"></span></p>
    <input asp-for="@Model.person.PhoneNumber" />
    <p><span asp-validation-for="@Model.person.PhoneNumber"></span></p>
    <button type="submit">Create</button>
</form>

