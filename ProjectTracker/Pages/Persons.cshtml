@page
@model ProjectTracker.Pages.PersonsModel

@{
    ViewData["Title"] = "Persons";
}

<h1>Persons</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Persons[0].Username)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Persons)
        {
            <tr>
                <td>
                    <a href="/PersonDetails?id=@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    <form method="post">
                        <button class="btn btn-danger" asp-page-handler="Delete" asp-route-id="@item.Id" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-success" role="button" asp-page="./CreatePerson" >Add Person</a>