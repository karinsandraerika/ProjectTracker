@page
@model ProjectTracker.Pages.ProjectItemsModel

@{
    ViewData["Title"] = "Items";
}

<h1>Items</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].Importance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].Completed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].TimeToComplete)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProjectItems[0].PersonList)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProjectItems)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Importance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Completed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeToComplete)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Project)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonList)
                </td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.Id">Project</a> |
                    <a asp-page="./Persons" asp-route-id="@item.Id">Persons</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form method="post">
    <input asp-for="@Model.projectItem.Name" />
    <p><span asp-validation-for="@Model.projectItem.Name"></span></p>
    <input asp-for="@Model.projectItem.Description" />
    <p><span asp-validation-for="@Model.projectItem.Description"></span></p>
    <input asp-for="@Model.projectItem.Importance" />
    <p><span asp-validation-for="@Model.projectItem.Importance"></span></p>
    <select asp-for="@Model.projectItem.PersonList" asp-items="@Model.PersonListItems" multiple></select>
    <button type="submit">Create</button>
</form>
